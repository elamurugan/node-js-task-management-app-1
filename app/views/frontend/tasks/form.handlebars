<div class="tasks_container container" style="margin-bottom:50px;">
    <h3>{{title}}</h3>

    <form action="{{baseUrl}}/task/create" method="post" name="task">
        <div class="form-row">
            <label class="col-form-label">Title</label>
            <input type="text" class="form-control" name="title" placeholder="Title" value="{{task.title}}" required/>
        </div>
        <div class="form-row">
            <label class="col-form-label">Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="10" placeholder="Description">{{task.description}}</textarea>
        </div>
        <div class="form-row">
            <label class="col-form-label">Status</label>
            <input type="text" class="form-control"  name="status" placeholder="Status" value="{{task.status}}"/>
        </div>
        <div class="form-row">
            <label class="col-form-label">Assign To</label>
            <input type="text" class="form-control"  name="assigned_to" placeholder="Assign To" value="{{task.assigned_to}}"/>
        </div>
        <div class="form-row">
            <label class="col-form-label">Start Date</label>
            <input type="text" class="form-control"  name="start_date" placeholder="Start Date" value="{{task.start_date}}"/>
        </div>
        <div class="form-row">
            <label class="col-form-label">End Date</label>
            <input type="text" class="form-control"  name="end_date" placeholder="End Date" value="{{task.end_date}}"/>
        </div>
        

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>